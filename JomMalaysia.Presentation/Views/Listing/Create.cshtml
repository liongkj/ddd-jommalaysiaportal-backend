@model CreateListingViewModel
<!--modal-->
<div class="row">
         <form asp-controller="Listing" asp-action="Create" method="post"
               class="form-horizontal" role="form">
             <h3 class="col-md-offset-2">New Listing</h3>
             <div class="form-group">
                 <label asp-for="ListingName" class="col-md-2 custom-control-label"/>
                 <div class="col-md-6">
                     <input asp-for="ListingName" class="form-control" />

                 </div>
             </div>
             <div class="form-group">
                 <div class="btn-group col-md-offset-2 col-md-6">
                     <input class="btn btn-default" type="submit" value="Return">

                 </div>
             </div>
         </form>
</div>